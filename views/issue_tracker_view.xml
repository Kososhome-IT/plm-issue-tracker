<odoo>
    <!-- Form View -->
    <record id="view_issue_tracker_form" model="ir.ui.view">
        <field name="name">issue.tracker.form</field>
        <field name="model">issue.tracker</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        
                        <h1 class="d_flex">
                        
                            <field name="plm_priority" widget="priority" class="mr-3"/>
                        </h1>
                            <h1 class="d_flex">
                                 <field name="name" readonly="1"/>
                            </h1>
                       
                    </div>
                    
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="sku"/>
                            <field name="vendor_id"/>
                        </group>
                        <group>
                            <field name="plm_deadline_date"/>
                            <field name="tags_ids" widget="many2many_tags"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="plm_mail_subject"/>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Request Info">
                            <group>
                                <group string="Created">
                                    <field name="plm_created_date"/>
                                    <field name="plm_created_by"/>
                                </group>
                                <group string="Assignment">
                                    <field name="plm_assigned_on"/>
                                    <field name="assigned_user_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_issue_tracker_kanban" model="ir.ui.view">
        <field name="name">issue.tracker.kanban</field>
        <field name="model">issue.tracker</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="state">
                <field name="id"/>
                <field name="name"/>
                <field name="plm_priority"/>
                <field name="state"/>
                <field name="category_id"/>
                <field name="sku"/>
                <field name="description"/>
                <field name="assigned_user_id"/>
                <field name="plm_created_date"/>
                <field name="plm_updated_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <!-- Header -->
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="float-end">
                                        <field name="plm_priority" widget="priority"/>
                                    </span>
                                </div>
                                
                                <!-- Body -->
                                <div class="o_kanban_record_body">
                                    <span t-if="record.category_id.value" class="badge badge-pill">
                                        <i class="fa fa-folder-o"/> <t t-esc="record.category_id.value"/>
                                    </span>
                                    <span t-if="record.sku.value">
                                        <br/><b>#</b><t t-esc="record.sku.value"/>
                                    </span>
                                    <div t-if="record.description.value" class="mt-2">
                                        <t t-esc="record.description.value.substring(0, 100)"/>
                                        <t t-if="record.description.value.length > 100">...</t>
                                    </div>
                                </div>
                                
                                <!-- Footer -->
                                <div class="o_kanban_record_bottom mt-3">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.assigned_user_id.value">
                                            <img t-att-src="kanban_image('res.users', 'avatar_128', record.assigned_user_id.raw_value)" 
                                                 class="oe_kanban_avatar o_image_24_cover rounded-circle" 
                                                 alt="User"/>
                                            <t t-esc="record.assigned_user_id.value"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <small class="text-muted">
                                            <i class="fa fa-clock-o"/> <t t-esc="record.plm_created_date.value"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View -->
    <record id="issue_tracker_tree" model="ir.ui.view">
        <field name="name">issue.tracker.tree</field>
        <field name="model">issue.tracker</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="assigned_user_id"/>
                <field name="sku"/>
                <field name="plm_mail_subject"/>
                <field name="vendor_id"/>
                <field name="plm_created_date"/>
                <field name="plm_deadline_date"/>
                <field name="plm_priority" widget="priority"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'assigned'" decoration-warning="state == 'progress'"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_issue_tracker" model="ir.actions.act_window">
        <field name="name">Issue Tracker</field>
        <field name="res_model">issue.tracker</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_issue_tracker_root" name="Issue Tracker" sequence="10"/>
    <menuitem id="menu_issues" name="Issues" parent="menu_issue_tracker_root" action="action_issue_tracker" sequence="1"/>
    <menuitem id="menu_configuration" name="Configuration" parent="menu_issue_tracker_root" sequence="100"/>
    <menuitem id="menu_category" name="Categories" parent="menu_configuration" action="action_issue_category" sequence="1"/>
    <menuitem id="menu_tags" name="Tags" parent="menu_configuration" action="action_issue_tags" sequence="2"/>
</odoo>
