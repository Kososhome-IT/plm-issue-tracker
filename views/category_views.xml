<odoo>
    <!-- Views -->
    <record id="view_issue_category_tree" model="ir.ui.view">
        <field name="name">issue.category.tree</field>
        <field name="model">issue.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="plm_created_date"/>
                <field name="name"/>
                <field name="description"/>
                <field name="plm_created_by"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    <record id="view_issue_category_form" model="ir.ui.view">
        <field name="name">issue.category.form</field>
        <field name="model">issue.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="plm_created_date"/>
                        <field name="plm_created_by"/>
                        <field name="active"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_issue_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">issue.category</field>
        <field name="view_mode">tree,form</field>
    </record>
   
</odoo>
