<odoo>
    <record id="view_issue_tags_tree" model="ir.ui.view">
        <field name="name">issue.tags.tree</field>
        <field name="model">issue.tags</field>
        <field name="arch" type="xml">
            <tree string="Tags">
                <field name="plm_created_date"/>
                <field name="name"/>
                <field name="description"/>
                <field name="plm_created_by"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_issue_tags_form" model="ir.ui.view">
        <field name="name">issue.tags.form</field>
        <field name="model">issue.tags</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="plm_created_date"/>
                        <field name="plm_created_by"/>
                        <field name="active"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_issue_tags" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">issue.tags</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>
